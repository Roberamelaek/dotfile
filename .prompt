
## Prompt


function parse_git_branch() {
    # Parse the current git branch name and print it
    which git &>/dev/null || return
    local branch=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/')
    [[ -n $branch ]] && echo " [${branch}]"
}

function set_PS1 {
    # Custom prompt with yellow-green background for date/time and purple-themed PS1
    local Ps1Tail=">" # Define a default value for Ps1Tail
    PS1='\[\e[48;5;190;38;5;57m\]┌ \D{%b-%d %H:%M:%S} ┐\[\e[0m\] \[\e[1;36m\]\w\[\e[0m\]$(parse_git_branch)
\[\e[1;35m\][\u@\h]\[\e[0m\]$Ps1Tail '
}

set_PS1 # Call the set_PS1 function

